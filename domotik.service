[Unit]
Description=Linky
StartLimitIntervalSec=300
StartLimitBurst=5
After=pigpiod.service

[Service]
WorkingDirectory=/home/domotik
# Environment=""
ExecStart=/home/domotik/.local/bin/domotik -c /home/domotik/.config/domotik/domotik.toml
User=domotik
Group=domotik
Restart=on-failure
RestartSec=10s
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target
