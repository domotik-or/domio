[Unit]
Description=Linky
StartLimitIntervalSec=300
StartLimitBurst=5
After=pigpiod.service

[Service]
WorkingDirectory=/home/domotik/python3-domotik
Environment="PYTHONPATH=/home/domotik/python3-domotik"
ExecStart=/usr/bin/python3 /home/domotik/python3-domotik/src/main.py
User=domotik
Group=domotik
Restart=on-failure
RestartSec=10s
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target
